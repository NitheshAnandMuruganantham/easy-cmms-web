{
  "schema": ["./schema.graphql"],
  "documents": "./src/**/*{.graphql,.gql}",
  "overwrite": true,
  "generates": {
    "./src/generated/index.tsx": {
      "plugins": [
        "typescript",
        "typescript-operations",
        "typescript-react-apollo"
      ],
      "config": {
        "skipTypename": false,
        "withHooks": true,
        "withHOC": false,
        "withComponent": false
      }
    },
    "./graphql.schema.json": {
      "plugins": ["introspection"]
    }
  }
}
